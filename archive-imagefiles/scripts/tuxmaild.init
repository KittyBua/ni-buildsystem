#!/bin/sh

. /etc/init.d/globals

case $1 in
	start)
		if [ -e /var/etc/.tuxmaild ]; then
			SHOWINFO "starting ..."
			/bin/tuxmaild
			sleep 1
		fi
	;;
	stop)
		if [ -e /var/etc/.tuxmaild ]; then
			SHOWINFO "stopping ..."
			pid=$(cat /var/run/tuxmail.pid 2>/dev/null)
			test -n "$pid" && kill $pid || true
		fi
	;;
	*)
		echo "[$BASENAME] Usage: $0 {start|stop}"
	;;
esac
