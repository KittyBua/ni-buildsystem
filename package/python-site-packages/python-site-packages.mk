define PYTHON_SETUPTOOLS_CHECK_SETUP_PY
	$(CD) $(PKG_BUILD_DIR); \
		if [ ! -e setup.py ]; then \
			$(call MESSAGE,"Applying 0001-add-setup.py.patch"); \
			$(PATCH) $(PACKAGE_DIR)/python-site-packages/patches/0001-add-setup.py.patch; \
		fi
endef
